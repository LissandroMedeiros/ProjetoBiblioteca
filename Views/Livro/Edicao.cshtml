@model Livro
@{
    ViewData["Title"] = "Edição de Livros";
}

<h3 class="row justify-content-md-center">Editar Livro</h3>
<br/>

<div class="row justify-content-md-center">
    
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <!-- Id -->
        <input type="hidden" asp-for="Id" />

     
        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input required asp-for="Titulo" class="form-control"/>
        </div>
     
        <div class="form-group">
            <label asp-for="Autor">Autor</label>
            <input required asp-for="Autor" class="form-control"/>
        </div>
      
        <div>
            <label asp-for="Ano">Ano</label>
            <input required asp-for="Ano" class="form-control"/>
        </div>

       
        <br/>
        <input type="submit" value="Salvar" style="width: 100%" class="btn btn-primary"/>
    </form>
</div>